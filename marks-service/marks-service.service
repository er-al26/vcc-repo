[Unit]
Description=Marks Service
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/microservices/marks-service
Environment="PATH=/home/user/microservices/marks-service/venv/bin"
ExecStart=/home/user/microservices/marks-service/venv/bin/python main.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
